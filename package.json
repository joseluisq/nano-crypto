{
    "name": "nano-crypto",
    "version": "1.0.0",
    "description": "Nano ID + Crypto utility functions with full Typescript support.",
    "main": "index.js",
    "typings": "index.d.ts",
    "repository": "joseluisq/nano-crypto",
    "license": "MIT",
    "author": {
        "name": "Jose Quintana",
        "url": "http://git.io/joseluisq"
    },
    "keywords": [
        "nanoid",
        "random",
        "string",
        "alphanumeric",
        "utility",
        "encrypt",
        "decrypt",
        "crypto",
        "digest",
        "hash",
        "cipher",
        "browser"
    ],
    "engines": {
        "node": ">= 10"
    },
    "scripts": {
        "build": "env NODE_ENV=production PKG_NAME=$npm_package_name make",
        "test": "yarn lint && jest",
        "lint": "tslint --format stylish --project tsconfig.json",
        "preversion": "yarn test && yarn build",
        "postversion": "git push --tags && yarn publish ./dist --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\""
    },
    "dependencies": {
        "nanoid": "^2.1.11"
    },
    "devDependencies": {
        "@types/jasmine": "^3.5.3",
        "@types/jest": "^25.1.2",
        "@types/nanoid": "^2.1.0",
        "@types/node": "^13.7.1",
        "jasmine-core": "^3.5.0",
        "jasmine-spec-reporter": "^4.2.1",
        "jasmine-ts": "^0.3.0",
        "jest": "^25.1.0",
        "rollup": "^1.31.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.2.0",
        "rollup-plugin-typescript2": "^0.25.3",
        "ts-jest": "^25.2.0",
        "ts-node": "^8.6.2",
        "tslint": "^6.0.0",
        "tslint-config-standard-plus": "^2.3.0",
        "typescript": "^3.7.5"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "transformIgnorePatterns": [],
        "testMatch": [
            "**/src/**.spec.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ]
    }
}
