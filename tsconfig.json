{
    "compileOnSave": false,
    "include": [
        "src",
        "test/**.spec.*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "pretty": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "es2015",
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "@types/node",
            "@types/jest"
        ],
        "lib": [
            "es6",
            "dom",
            "ES2015",
            "ESNext.AsyncIterable",
        ]
    }
}
